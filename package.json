{
	"name": "provision-bar",
	"displayName": "Provision Bar",
	"description": "Providing a simple way to view all notes in your workspace based on keywords.",
	"author": "Fooxly",
	"publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
	"keywords": [
		"fooxly",
		"vscode",
		"code",
		"todo",
		"fixme",
		"note",
		"notes",
		"keyword",
		"statusbar"
	],
	"homepage": "https://github.com/Fooxly/vscode-provision-bar",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fooxly/vscode-provision-bar.git"
	},
	"bugs": {
		"url": "https://github.com/Fooxly/vscode-provision-bar/issues",
		"email": "bugs@fooxly.com"
	},
	"galleryBanner": {
		"color": "#272729",
		"theme": "dark"
	},
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./lib/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "provision.listall",
				"title": "Provision: List"
			},
			{
				"when": "provision.bar.canShowContext&&provision.bar.canUseCommands",
				"command": "provision.lastNote",
				"title": "Provision: Previous Note"
			},
			{
				"when": "provision.bar.canShowContext&&provision.bar.canUseCommands",
				"command": "provision.nextNote",
				"title": "Provision: Next Note"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"when": "provision.bar.canUseCommands",
					"command": "provision.listall"
				},
				{
					"when": "provision.bar.canShowContext&&provision.bar.canUseCommands",
					"command": "provision.nextNote"
				},
				{
					"when": "provision.bar.canShowContext&&provision.bar.canUseCommands",
					"command": "provision.lastNote"
				}
			],
			"editor/context": [
				{
					"when": "provision.bar.canShowContext",
					"command": "provision.lastNote",
					"group": "provision@1"
				},
				{
					"when": "provision.bar.canShowContext",
					"command": "provision.nextNote",
					"group": "provision@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "provision.listall",
				"key": "ctrl+shift+L",
				"mac": "cmd+shift+L",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Provision",
			"properties": {
				"provision.bar.updateMethod": {
					"type": "string",
					"description": "The method to use for updating the statusbar items",
					"enum": [
						"onTextChange",
						"onDocumentSave"
					],
					"default": "onTextChange"
				},
				"provision.bar.position": {
					"type": "string",
					"description": "The position where in the statusbar the information needs to be shown",
					"enum": [
						"left",
						"right"
					],
					"default": "left"
				},
				"provision.dropdownType": {
					"type": "string",
					"enum": [
						"normal",
						"compact"
					],
					"default": "normal",
					"description": "The appereance of the dropdown items"
				},
				"provision.bar.alwaysShow": {
					"type": "boolean",
					"default": false,
					"description": "Show the statusbar item(s) when there are no notes"
				},
				"provision.instant": {
					"type": "boolean",
					"default": true,
					"description": "Jump to a note instead of showing the dropdown when there is only one"
				},
				"provision.translations": {
					"type": "object",
					"description": "Alle the translations",
					"properties": {
						"noNoteFound": {
							"type": "string",
							"description": "No note found message text"
						},
						"dropdownText": {
							"type": "string",
							"description": "Dropdown information text"
						}
					},
					"default": {
						"noNoteFound": "No note found",
						"dropdownText": "Notes found:"
					}
				},
				"provision.notes": {
					"type": "array",
					"description": "",
					"items": {
						"type": "object",
						"description": "A defined provision group",
						"properties": {
							"keywords": {
								"type": "array",
								"description": "The keywords that belong to this group",
								"items": {
									"type": "object",
									"description": "A specific keyword option with settings",
									"properties": {
										"keyword": {
											"type": "string",
											"description": "The keyword that needs to be defined"
										},
										"useColons": {
											"type": "boolean",
											"description": "If the keyword needs to have a colon after it for it to count",
											"default": true
										},
										"caseSensitive": {
											"type": "boolean",
											"description": "If the keyword needs to be case sensitive",
											"default": true
										}
									}
								}
							},
							"priority": {
								"type": "number",
								"description": "The priority of the statusbar items",
								"default": 10
							},
							"tooltip": {
								"type": "string",
								"description": "The tooltip that will be shown when you hover over the item"
							},
							"text": {
								"type": [
									"object",
									"string"
								],
								"description": "The text that will be shown",
								"properties": {
									"one": {
										"type": "string",
										"description": "The text that will be shown when there is only 1 item"
									},
									"multiple": {
										"type": "string",
										"description": "The text that will be shown when there are 0 or more than 1 items"
									}
								}
							}
						}
					},
					"default": [
						{
							"keywords": [
								{
									"keyword": "TODO",
									"useColons": true,
									"caseSensitive": true
								},
								{
									"keyword": "FIXME",
									"useColons": true,
									"caseSensitive": true
								}
							],
							"priority": 10,
							"tooltip": "These are all the 'TODO' and 'FIXME' notes in this file",
							"text": {
								"one": "üìù {0} TODO",
								"multiple": "üìù {0} TODOs"
							}
						},
						{
							"keywords": [
								{
									"keyword": "NOTE",
									"useColons": true,
									"caseSensitive": true
								}
							],
							"priority": 9,
							"tooltip": "These are all the notes in this file",
							"text": {
								"one": "üìù {0} Note",
								"multiple": "üìù {0} Notes"
							}
						}
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}

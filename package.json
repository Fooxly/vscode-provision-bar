{
  	"name": "vscode-provision-bar",
	"displayName": "ProVision Bar",
	"author": "Fooxly <hello@fooxly.com> (https://developer.fooxly.com/)",
	"description": "Providing a simple way to view all notes in your workspace based on keywords.",
	"version": "3.0.4",
    "homepage": "https://github.com/Fooxly/vscode-provision-bar",
	"publisher": "Fooxly",
	"icon": "assets/icon.png",
    "galleryBanner": {
		"color": "#272729",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Fooxly/vscode-provision-bar.git"
	},
	"bugs": {
		"url": "https://github.com/Fooxly/vscode-provision-bar/issues",
		"email": "bugs@fooxly.com"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
        "configuration": {
            "type": "object",
            "title": "ProVision",
            "properties": {
                "ProVision.bar.groups": {
                    "type": "object",
                    "title": "Statusbar Groups",
                    "description": "Groups in which the keywords will be divided."
                },
                "ProVision.bar.priority": {
                    "type": "integer",
                    "title": "Statusbar Priority",
                    "description": "The priority inside the statusbar.",
                    "default": 10
                },
                "ProVision.bar.side": {
                    "type": "string",
                    "title": "Statusbar Side",
                    "description": "On which side of the statusbar the items should be shown.",
                    "enum": [
                        "left",
                        "right"
                    ],
                    "default": "left"
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"ts-loader": "^8.0.14",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}
